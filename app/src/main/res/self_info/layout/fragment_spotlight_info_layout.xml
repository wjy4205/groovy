<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:gravity="center"
        android:text="Spotlight Credits let your show shine on Groovy map."
        android:textColor="@color/white"
        android:textSize="30px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:gravity="center"
        android:text="Your show will get a special icon and"
        android:textColor="@color/white"
        android:textSize="30px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="be recommended and display first to users."
        android:textColor="@color/white"
        android:textSize="30px" />

    <TextView
        android:id="@+id/tv_spotlight"
        style="@style/role_selected_text_style"
        android:layout_marginTop="80px"
        android:text="GET CREDITS" />
</LinearLayout>