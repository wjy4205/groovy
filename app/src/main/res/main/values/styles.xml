<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="windowNoTitle">?android:windowNoTitle</item>
    </style>


    <style name="AppTheme.Slide" parent="@style/AppTheme">
        <!--Required-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Slide.Animation</item>
    </style>

    <style name="AppTheme.Slide.Animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_out</item>
    </style>

    <style name="AppTheme.SwipeBack" parent="AppTheme">
        <item name="android:windowBackground">@color/theme_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="tab_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="role_selected_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_double_corner_rect_bg</item>
        <item name="android:paddingBottom">26px</item>
        <item name="android:paddingTop">26px</item>
        <item name="android:layout_marginLeft">100px</item>
        <item name="android:layout_marginRight">100px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <!--输入框-->
    <style name="base_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">110px</item>
        <item name="android:layout_marginRight">110px</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/common_grey</item>
    </style>

    <style name="edittext_match_patent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/common_grey</item>
        <item name="android:textColorHint">@color/common_grey</item>
    </style>


    <!--横向分割线-->
    <style name="tranverse_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/common_grey</item>
    </style>

    <!--remark text-->
    <style name="remark_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_grey</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--输入框上面的指示文字-->
    <style name="common_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_grey</item>
        <item name="android:textSize">@dimen/text_size_common</item>
    </style>

    <style name="grey_highlight_text" parent="common_text_style">
        <item name="android:textColor">@color/select_grey_puple_color</item>
    </style>

    <style name="common_white_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--输入框样式-->
    <style name="common_input_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/common_grey</item>
    </style>
    <!--个人中心设置 输入框-->
    <style name="personal_data_input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:background">@drawable/shape_bottom_line_white</item>
        <item name="android:textColorHint">@color/common_grey</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>
    <!--输入框的父布局-->
    <style name="input_text_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/shape_bottom_line_white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="me_icon_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/shape_bottom_line_grey</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="bottom_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#333</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_common</item>
    </style>

    <style name="schedule_rl_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="schedule_week_tv_style" parent="common_white_text_style">
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="schedule_circle_tv_style">
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/shape_circle_grey_solid_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_common</item>
    </style>

    <style name="circle_bg_text">
        <item name="android:layout_width">40px</item>
        <item name="android:layout_height">40px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_circle_stroke_bg</item>
    </style>
    <style name="circle_bg_text_selected">
        <item name="android:layout_width">50px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_blue_circle_solid_bg</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
