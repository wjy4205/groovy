<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="60dp">

    <com.xw.repo.XEditText
        android:id="@+id/signup_et_code"
        style="@style/base_edit_text_style"
        android:layout_marginTop="40dp"
        android:hint="@string/verification_code"
        app:x_disableEmoji="true"
        app:x_importantWord="true" />

    <com.xw.repo.XEditText
        android:id="@+id/signup_et_phone"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:hint="PHONE"
        android:inputType="phone"
        app:x_disableEmoji="true"
        app:x_importantWord="true" />

    <com.xw.repo.XEditText
        android:id="@+id/signup_et_email"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:hint="EMAIL" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:gravity="bottom"
            android:text="*"
            android:textColor="@color/accentPurple"
            android:textSize="@dimen/text_size_small" />

        <TextView
            style="@style/remark_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/required" />
    </LinearLayout>


    <TextView
        android:id="@+id/bt_sign_up"
        style="@style/role_selected_text_style"
        android:layout_marginTop="30dp"
        android:text="@string/sign_up" />

    <TextView
        android:id="@+id/tv_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="80px"
        android:paddingRight="80px"
        android:text="@string/protocol_link"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/text_size_common" />
</LinearLayout>