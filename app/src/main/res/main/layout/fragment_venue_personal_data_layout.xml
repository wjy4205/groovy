<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_bg"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/personal_headview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/icon_head_default"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <ImageView
                android:id="@+id/personal_iv_select_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:src="@drawable/login_photo" />
        </FrameLayout>

        <TextView
            android:id="@+id/personal_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:maxLength="30"
            android:maxLines="1"
            android:text="NAME"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/personal_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:text="NAME"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/personal_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:text="NAME"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            style="@style/common_text_style"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="VENUE TELPHONE" />

        <EditText
            android:id="@+id/personal_et_phone"
            style="@style/personal_data_input_text"
            android:hint="VENUE TELPHONE"/>

        <TextView
            style="@style/common_text_style"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:text="VENUE SERVICE（MULTI）" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <CheckBox
                android:id="@+id/service_choose_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_venue_service_checkbox"
                android:paddingLeft="10dp"
                android:text="Exclude 21+"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/service_choose_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:button="@drawable/selector_venue_service_checkbox"
                android:paddingLeft="10dp"
                android:text="Serves Food"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/service_choose_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:button="@drawable/selector_venue_service_checkbox"
                android:paddingLeft="10dp"
                android:text="Serves Alcohol"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            style="@style/common_text_style"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:text="WEBSITE" />

        <EditText
            android:id="@+id/personal_et_website"
            style="@style/personal_data_input_text"
            android:hint="WEBSITE"/>

        <TextView
            style="@style/common_text_style"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:text="@string/facebook" />

        <EditText
            android:id="@+id/personal_et_facebook"
            style="@style/personal_data_input_text"
            android:hint="@string/facebook"/>

        <TextView
            style="@style/common_text_style"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:text="@string/twitter" />

        <EditText
            android:id="@+id/personal_et_twitter"
            style="@style/personal_data_input_text"
            android:hint="@string/twitter"/>
    </LinearLayout>
</ScrollView>