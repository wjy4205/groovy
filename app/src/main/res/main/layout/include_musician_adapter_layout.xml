<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_musician_head_pic"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="140px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.bunny.groovy.weidget.HeightLightTextView
                android:id="@+id/musician_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="11"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common"/>

            <TextView
                android:id="@+id/musician_tv_performerStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/list_star"
                android:drawablePadding="4dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/musician_tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Verification"
                android:textColor="@color/common_grey"
                android:textSize="9sp"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/musician_tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <com.bunny.groovy.weidget.HeightLightTextView
                android:id="@+id/musician_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common" />

            <ImageView
                android:id="@+id/nextshow_iv_edit"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="60px"
                android:scaleType="center"
                android:layout_height="40px"
                android:src="@drawable/icon_dian" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>