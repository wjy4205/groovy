<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/item_musician_reply_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.5dp"
                android:textColor="@color/white"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/item_musician_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:lines="1"
                android:textColor="#878787"
                android:textSize="13sp" />
        </RelativeLayout>
        <com.bunny.groovy.weidget.StarGradeView
            android:id="@+id/star_grade"
            android:layout_width="85dp"
            android:layout_height="12dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            app:star_height="12.5dp"
            app:star_space="6dp"
            android:layout_marginLeft="20.5dp"
            app:star_width="12dp" />
        <TextView
            android:id="@+id/item_musician_reply_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_musician_reply_user_name"
            android:layout_below="@id/item_musician_reply_user_name"
            android:layout_marginLeft="20.5dp"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/tvDot"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/details_ok" />

    <View
        android:id="@+id/tvTopLine"
        android:layout_width="0.5dp"
        android:layout_height="32.5dp"
        android:layout_marginLeft="2.5dp"
        android:background="@color/light_purple" />

    <View
        android:id="@+id/tvBottomLine"
        android:layout_width="0.5dp"
        android:layout_height="32.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2.5dp"
        android:background="@color/light_purple" />


</RelativeLayout>