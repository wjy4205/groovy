<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/recharge_tv_paypal_key"
                style="@style/common_text_style"
                android:text="PAYPAL"
                android:textSize="@dimen/text_size_small"/>
            <TextView
                android:id="@+id/recharge_tv_paypal_value"
                android:layout_toRightOf="@+id/recharge_tv_paypal_key"
                style="@style/common_text_style"
                android:textColor="@color/textAccent"
                android:layout_marginLeft="40px"
                tools:text="test@123.com"
                android:textSize="@dimen/text_size_small"/>
            <TextView
                android:id="@+id/recharge_tv_paypal_max"
                android:layout_below="@+id/recharge_tv_paypal_value"
                android:layout_alignLeft="@+id/recharge_tv_paypal_value"
                android:layout_marginTop="16px"
                style="@style/common_text_style"
                android:text="The max is $999"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/common_grey"/>

        <TextView
            style="@style/common_text_style"
            android:layout_marginTop="50px"
            android:text="CHARGE BALANCE"
            android:textSize="@dimen/text_size_small"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_size"
                android:textColor="@color/white"
                android:text="$"/>
            <EditText
                android:id="@+id/recharge_et_balance"
                android:layout_width="match_parent"
                android:layout_marginLeft="10px"
                android:singleLine="true"
                android:textSize="@dimen/title_size"
                android:layout_height="wrap_content"
                tools:text="100"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:background="@null"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/common_grey"
                android:hint="CHARGE BALANCE"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_grey"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_recharge"
        style="@style/role_selected_text_style"
        android:layout_marginTop="80px"
        android:text="RECHARGE"/>

</LinearLayout>