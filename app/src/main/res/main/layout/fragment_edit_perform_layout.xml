<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            style="@style/common_text_style"
            android:layout_marginTop="10dp"
            android:text="SHOW GENRE"/>

        <LinearLayout style="@style/input_text_parent">

            <EditText
                android:id="@+id/edit_et_style"
                style="@style/common_input_text"
                android:hint="STYLE"/>
        </LinearLayout>


        <TextView
            style="@style/common_text_style"
            android:layout_marginTop="10dp"
            android:text="TIME"/>

        <LinearLayout style="@style/input_text_parent">

            <EditText
                android:id="@+id/edit_et_time"
                style="@style/common_input_text"
                android:hint="CHOOSE"/>

        </LinearLayout>


        <TextView
            style="@style/common_text_style"
            android:layout_marginTop="10dp"
            android:text="SHOW DESCRIPTION"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_textarea_bg"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp">

            <EditText
                android:id="@+id/edit_et_bio"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:gravity="top"
                android:hint="Tell people a little about the music you will play(400 cMax)"
                android:lineSpacingExtra="3dp"
                android:lines="4"
                android:maxLength="400"
                android:textColor="@color/white"
                android:textColorHint="@color/common_grey"
                android:textSize="@dimen/text_size_common"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#878787"
                    android:text="0"
                    android:textSize="@dimen/text_size_small"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/400"
                    android:textColor="#878787"
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/edit_tv_confirm"
        style="@style/role_selected_text_style"
        android:layout_marginTop="30dp"
        android:text="CONFIRM"/>
</LinearLayout>