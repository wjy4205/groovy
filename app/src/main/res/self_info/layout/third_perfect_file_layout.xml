<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/circle_bg_text"
            android:text="1" />

        <View
            style="@style/tranverse_line"
            android:layout_weight="1" />

        <TextView
            style="@style/circle_bg_text"
            android:text="2" />

        <View
            style="@style/tranverse_line"
            android:layout_weight="1" />

        <TextView
            style="@style/circle_bg_text_selected"
            android:text="3" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/tell_us"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_common" />


    <com.xw.repo.XEditText
        android:id="@+id/et_facebook"
        style="@style/base_edit_text_style"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/login_facebook"
        android:drawablePadding="4dp"
        android:hint="@string/facebook"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_twitter"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_twiter"
        android:drawablePadding="4dp"
        android:hint="@string/twitter"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_soundcloud"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_soundcloud"
        android:drawablePadding="4dp"
        android:hint="@string/sound_cloud"
        app:x_disableEmoji="true" />


    <TextView
        android:id="@+id/tv_go"
        style="@style/role_selected_text_style"
        android:layout_marginTop="30dp"
        android:text="GO!" />

</LinearLayout>