<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/login_bg"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240px"
        android:src="@drawable/login_logo"/>

    <TextView
        android:id="@+id/aboutus_tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:text="version"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/text_size_small"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:text="CALL-PHONE NUMBER"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/text_size_big"/>

    <TextView
        android:id="@+id/aboutus_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_common"
        tools:text="133"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:text="MAILBOX"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/text_size_big"/>

    <TextView
        android:id="@+id/aboutus_tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_common"
        tools:text="133"/>
</LinearLayout>