<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/include_detail_tv_venueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:maxEms="11"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_common"
                tools:text="The Show The"/>

            <TextView
                android:id="@+id/include_detail_tv_venueStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.1"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/list_star"
                android:drawablePadding="4dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <TextView
            android:id="@+id/include_detail_tv_venueAddress"
            style="@style/common_text_style"
            android:layout_marginTop="8dp"
            tools:text="Net 999 st"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/facebook_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_facebook"/>

            <ImageView
                android:id="@+id/twitter_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/user_twiter"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/include_detail_tv_21plus"
                style="@style/grey_highlight_text"
                android:drawableLeft="@drawable/selector_type_yes_no_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:layout_marginRight="8px"
                android:text="21+"/>
            <TextView
                android:id="@+id/include_detail_tv_food"
                style="@style/grey_highlight_text"
                android:drawableLeft="@drawable/selector_type_yes_no_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:layout_marginRight="8px"
                android:text="Food"/>
            <TextView
                android:id="@+id/include_detail_tv_Alcohol"
                style="@style/grey_highlight_text"
                android:drawableLeft="@drawable/selector_type_yes_no_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="Alcohol"/>
        </LinearLayout>
        <TextView
            android:id="@+id/include_detail_tv_Cover_Charge"
            style="@style/grey_highlight_text"
            android:drawableLeft="@drawable/selector_type_yes_no_icon"
            android:drawablePadding="5dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="Cover Charge"/>

        <TextView
            android:id="@+id/include_detail_tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="15088889999"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/textAccent"
            android:drawableRight="@drawable/icon_phone"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/include_detail_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="www.abc.com"
            android:layout_marginTop="8dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textAccent"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/include_detail_iv_head"
        android:layout_width="300px"
        android:layout_height="300px"
        android:src="@drawable/venue_instead_pic"/>
</LinearLayout>