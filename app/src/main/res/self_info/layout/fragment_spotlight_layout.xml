<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/text_size_common"
        tools:text="Some text to explain the function: Luke will provide the text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="vertical"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recharge_tv_paypal_key"
                style="@style/common_text_style"
                android:text="Price"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/spotlight_tv_per"
                style="@style/common_text_style"
                android:layout_marginLeft="40px"
                android:layout_toRightOf="@+id/recharge_tv_paypal_key"
                android:textColor="@color/textAccent"
                android:textSize="@dimen/text_size_small"
                android:text="$10//ea"/>

            <TextView
                style="@style/common_text_style"
                android:layout_below="@+id/spotlight_tv_per"
                android:layout_marginTop="16px"
                android:text="Spotlighted shows get extra attention from users"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/common_grey"/>

        <TextView
            style="@style/common_text_style"
            android:layout_marginTop="50px"
            android:text="Quantity"
            android:textSize="@dimen/text_size_small"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/spotlight_et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="#"
                android:inputType="number"
                android:paddingBottom="20px"
                android:paddingTop="20px"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/common_grey"
                android:textSize="@dimen/text_size_common"
                tools:text="100"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="40px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_grey"
                android:textSize="@dimen/text_size_common"
                android:text="TOTAL"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size"
                android:paddingLeft="10px"
                android:text="$"/>

            <TextView
                android:id="@+id/spotlight_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size"
                android:paddingLeft="4px"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_spotlight"
        style="@style/role_selected_text_style"
        android:layout_marginTop="80px"
        android:text="PURCHASE"/>
</LinearLayout>