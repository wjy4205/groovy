<?xml version="1.0" encoding="utf-8"?>

<!--演出机会详情 从地图上点进去的-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/show_detail_tv_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#333"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="VERIFICATION"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common" />


        <TextView
            android:id="@+id/show_detail_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="Oct 1st"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common" />


        <TextView
            android:id="@+id/show_detail_tv_performer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Xkkl"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/common_text_style"
                    android:text="Genre" />

                <TextView
                    android:id="@+id/show_detail_tv_style"
                    style="@style/common_white_text_style"
                    android:layout_marginTop="4dp"
                    tools:text="RockRock" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/common_text_style"
                    android:text="Time" />

                <TextView
                    android:id="@+id/show_detail_tv_time"
                    style="@style/common_white_text_style"
                    android:layout_marginTop="4dp"
                    android:text="3:30-4:40" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/common_text_style"
                    android:text="Distance" />

                <TextView
                    android:id="@+id/show_detail_tv_distance"
                    style="@style/common_white_text_style"
                    android:layout_marginTop="4dp"
                    android:text="20m" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/show_detail_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/item_favorite_tv_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="BOOKING CONTACT :"
            android:textColor="@color/textAccent"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/show_detail_iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/list_phone" />

            <ImageView
                android:id="@+id/show_detail_iv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/item_favorite_iv_phone"
                android:src="@drawable/list_email" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="#222" />

        <include layout="@layout/include_detail_card_layout" />

    </LinearLayout>
</ScrollView>