<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <com.xw.repo.XEditText
        android:id="@+id/et_venue_code"
        style="@style/base_edit_text_style"
        android:layout_marginTop="30dp"
        android:hint="@string/venue_register_code"
        app:x_importantWord="true"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_venue_service"
        style="@style/base_edit_text_style"
        android:hint="@string/venue_register_service"
        app:x_importantWord="true"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_venue_booking_phone"
        style="@style/base_edit_text_style"
        android:hint="@string/venue_register_booking_phone"
        app:x_importantWord="true"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_venue_booking_email"
        style="@style/base_edit_text_style"
        android:hint="@string/venue_register_booking_email"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_venue_phone"
        style="@style/base_edit_text_style"
        android:hint="@string/venue_register_phone"
        app:x_importantWord="true"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_venue_website"
        style="@style/base_edit_text_style"
        android:hint="@string/venue_register_website"
        app:x_importantWord="true"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_venue_facebook"
        style="@style/base_edit_text_style"
        android:hint="@string/facebook"
        app:x_importantWord="true"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_venue_twitter"
        style="@style/base_edit_text_style"
        android:hint="@string/twitter"
        app:x_importantWord="true"
        app:x_disableEmoji="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="110px"
        android:layout_marginLeft="115px"
        android:drawableLeft="@drawable/icon_start"
        android:drawablePadding="3dp"
        android:text="@string/required"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/text_size_small"/>

    <TextView
        android:id="@+id/bt_sign_up"
        style="@style/role_selected_text_style"
        android:layout_marginTop="30dp"
        android:text="@string/sign_up" />

    <TextView
        android:id="@+id/tv_venue_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/protocol_link"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/text_size_common" />
</LinearLayout>