<?xml version="1.0" encoding="utf-8"?>

<!--演出机会详情 从地图上点进去的-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/theme_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/invite_tv_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#333"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="VERIFICATION"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_common"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/invite_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Oct 1st"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common"/>

        <TextView
            android:id="@+id/invite_tv_center_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="\@"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common"/>

        <TextView
            android:id="@+id/invite_tv_venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="The Xkkl"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_favorite_tv_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="BOOKING CONTACT :"
        android:textColor="@color/textAccent"
        android:textSize="@dimen/text_size_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/invite_iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/list_phone"/>

        <ImageView
            android:id="@+id/invite_iv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/item_favorite_iv_phone"
            android:src="@drawable/list_email"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:background="#222"/>

    <include layout="@layout/include_detail_card_layout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/invite_ll_action"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="#333"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/invite_tv_reject"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common"
            android:gravity="center"
            android:text="REJECT"/>
        <View
            android:layout_width="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/invite_tv_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common"
            android:gravity="center"
            android:text="CONFIRM"/>
    </LinearLayout>
</LinearLayout>