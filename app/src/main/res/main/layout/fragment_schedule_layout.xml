<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/theme_bg"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/schedule_ll_time_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/schedule_bt_last_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp"
            android:src="@drawable/icon_left"/>

        <TextView
            android:id="@+id/schedule_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEEK:DEC 13-19"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_common"/>

        <ImageView
            android:id="@+id/schedule_bt_next_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingTop="16dp"
            android:src="@drawable/icon_right"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/schedule_ll_first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_ll_time_control"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/schedule_rl_1"
            style="@style/schedule_rl_style"
            android:background="@drawable/bg_mon">

            <TextView
                style="@style/schedule_week_tv_style"
                android:layout_centerHorizontal="true"
                android:text="MON"/>

            <TextView
                android:id="@+id/schedule_tv_show_number_1"
                style="@style/schedule_circle_tv_style"
                />

            <ImageView
                android:id="@+id/schedule_iv_add_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_add"/>
        </RelativeLayout>

        <View
            android:layout_width="13dp"
            android:layout_height="10dp"
            />

        <RelativeLayout
            android:id="@+id/schedule_rl_2"
            style="@style/schedule_rl_style"
            android:background="@drawable/bg_tue">

            <TextView
                style="@style/schedule_week_tv_style"
                android:layout_centerHorizontal="true"
                android:text="TUE"/>

            <TextView
                android:id="@+id/schedule_tv_show_number_2"
                style="@style/schedule_circle_tv_style"/>

            <ImageView
                android:id="@+id/schedule_iv_add_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_add"/>
        </RelativeLayout>

        <View
            android:layout_width="13dp"
            android:layout_height="10dp"
            />

        <RelativeLayout
            android:id="@+id/schedule_rl_3"
            style="@style/schedule_rl_style"
            android:background="@drawable/bg_wed">

            <TextView
                style="@style/schedule_week_tv_style"
                android:layout_centerHorizontal="true"
                android:text="WED"/>

            <TextView
                android:id="@+id/schedule_tv_show_number_3"
                style="@style/schedule_circle_tv_style"/>

            <ImageView
                android:id="@+id/schedule_iv_add_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_add"/>
        </RelativeLayout>

        <View
            android:layout_width="13dp"
            android:layout_height="10dp"
            />

        <RelativeLayout
            android:id="@+id/schedule_rl_4"
            style="@style/schedule_rl_style"
            android:background="@drawable/bg_thur">

            <TextView
                style="@style/schedule_week_tv_style"
                android:layout_centerHorizontal="true"
                android:text="THUR"/>

            <TextView
                android:id="@+id/schedule_tv_show_number_4"
                style="@style/schedule_circle_tv_style"/>

            <ImageView
                android:id="@+id/schedule_iv_add_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_add"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_ll_first_line"
        android:layout_marginTop="13dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="2"/>

        <RelativeLayout
            android:id="@+id/schedule_rl_5"
            style="@style/schedule_rl_style"
            android:background="@drawable/bg_fri">


            <TextView
                style="@style/schedule_week_tv_style"
                android:layout_centerHorizontal="true"
                android:text="FRI"/>

            <TextView
                android:id="@+id/schedule_tv_show_number_5"
                style="@style/schedule_circle_tv_style"/>

            <ImageView
                android:id="@+id/schedule_iv_add_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_add"/>
        </RelativeLayout>

        <View
            android:layout_width="13dp"
            android:layout_height="10dp"
            />

        <RelativeLayout
            android:id="@+id/schedule_rl_6"
            style="@style/schedule_rl_style"
            android:background="@drawable/bg_sat">

            <TextView
                style="@style/schedule_week_tv_style"
                android:layout_centerHorizontal="true"
                android:text="SAT"/>

            <TextView
                android:id="@+id/schedule_tv_show_number_6"
                style="@style/schedule_circle_tv_style"/>

            <ImageView
                android:id="@+id/schedule_iv_add_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_add"/>
        </RelativeLayout>

        <View
            android:layout_width="13dp"
            android:layout_height="10dp"
            />

        <RelativeLayout
            android:id="@+id/schedule_rl_7"
            style="@style/schedule_rl_style"
            android:background="@drawable/bg_sun">

            <TextView
                style="@style/schedule_week_tv_style"
                android:layout_centerHorizontal="true"
                android:text="SUN"/>

            <TextView
                android:id="@+id/schedule_tv_show_number_7"
                style="@style/schedule_circle_tv_style"/>

            <ImageView
                android:id="@+id/schedule_iv_add_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_add"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="2"/>
    </LinearLayout>


    <com.bunny.groovy.weidget.MoveLayout
        android:id="@+id/moveLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="#232323">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_shrink"/>
        </FrameLayout>

        <TextView
            android:id="@+id/schedule_tv_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="SHOW LIST ON MON"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/schedule_tv_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/next_show_default_info"
                android:textColor="@color/common_grey"
                android:textSize="@dimen/text_size_common"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

    </com.bunny.groovy.weidget.MoveLayout>
</RelativeLayout>