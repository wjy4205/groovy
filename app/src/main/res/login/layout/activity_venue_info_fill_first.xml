<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/circle_bg_text_selected"
            android:text="1" />

        <View
            style="@style/tranverse_line"
            android:layout_weight="1" />

        <TextView
            style="@style/circle_bg_text"
            android:text="2" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/venue_info_head_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/venue_default_photo"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <ImageView
            android:id="@+id/venue_info_select_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:src="@drawable/login_photo" />
    </FrameLayout>

    <com.xw.repo.XEditText
        android:id="@+id/venue_info_booking_email"
        style="@style/base_edit_text_style"
        android:layout_marginTop="20dp"
        android:hint="@string/venue_register_booking_email"
        app:x_disableEmoji="true"
        app:x_importantWord="true" />

    <com.xw.repo.XEditText
        android:id="@+id/venue_info_service"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:hint="@string/venue_register_service"
        app:x_disableEmoji="true"
        app:x_importantWord="true" />

    <com.xw.repo.XEditText
        android:id="@+id/venue_info_phone"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:hint="@string/venue_register_phone"
        app:x_disableEmoji="true"
        app:x_importantWord="true" />

    <com.xw.repo.XEditText
        android:id="@+id/venue_info_website"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:hint="@string/venue_register_website"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/venue_info_website_address"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:hint="@string/venue_register_address"
        app:x_disableEmoji="true"
        app:x_importantWord="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:text="@string/required"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/perfect_info_tv_next"
        style="@style/role_selected_text_style"
        android:layout_marginTop="30dp"
        android:text="@string/next" />

</LinearLayout>