<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/user_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/performer_detail_iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/head"
                tools:civ_border_color="@color/white"
                tools:civ_border_width="1dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/item_notification_tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_double_corner_rect_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="DETAILS"
                android:layout_gravity="center"
                android:textColor="@color/textAccent"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/user_info_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/performer_detail_tv_venueName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_common"/>

                <ImageView
                    android:id="@+id/performer_me_play_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/login_play"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/performer_facebook_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_facebook"/>

                <ImageView
                    android:id="@+id/performer_twitter_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/user_twiter"/>

                <ImageView
                    android:id="@+id/performer_me_tv_cloud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/user_soundcloud"/>
            </LinearLayout>

            <TextView
                android:id="@+id/performer_center_tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POP , ROCK"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/icon_star"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/performer_center_tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="4.9"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>