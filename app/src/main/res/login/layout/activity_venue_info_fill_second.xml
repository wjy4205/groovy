<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/circle_bg_text"
            android:text="1" />

        <View
            style="@style/tranverse_line"
            android:layout_weight="1"/>

        <TextView
            style="@style/circle_bg_text_selected"
            android:text="2"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/venue_info_fill_social"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_common" />

    <com.xw.repo.XEditText
        android:id="@+id/et_facebook"
        style="@style/base_edit_text_style"
        android:layout_marginTop="50dp"
        android:drawableLeft="@mipmap/login_facebook"
        android:drawablePadding="4dp"
        android:hint="@string/facebook"
        app:x_disableEmoji="true" />

    <com.xw.repo.XEditText
        android:id="@+id/et_twitter"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/icon_twiter"
        android:drawablePadding="4dp"
        android:hint="@string/twitter"
        app:x_disableEmoji="true" />

    <TextView
        android:id="@+id/tv_go"
        style="@style/role_selected_text_style"
        android:layout_marginTop="30dp"
        android:text="GO!" />

</LinearLayout>