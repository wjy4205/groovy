<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            style="@style/common_text_style"
            android:layout_marginTop="10dp"
            android:text="SHOW TIME"/>

        <LinearLayout style="@style/input_text_parent">

            <EditText
                android:id="@+id/apply_et_time"
                style="@style/common_input_text"
                android:hint="CHOOSE"/>

        </LinearLayout>

        <TextView
            style="@style/common_text_style"
            android:layout_marginTop="10dp"
            android:text="SHOW GENRE"/>

        <LinearLayout style="@style/input_text_parent">

            <EditText
                android:id="@+id/apply_et_style"
                style="@style/common_input_text"
                android:hint="STYLE"/>
        </LinearLayout>

        <TextView
            style="@style/common_text_style"
            android:layout_marginTop="10dp"
            android:text="SHOW DESCRIPTION"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_textarea_bg"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp">

            <EditText
                android:id="@+id/apply_et_bio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:hint="Tell people a little about the music you will play(400 cMax)"
                android:lineSpacingExtra="3dp"
                android:lines="4"
                android:maxLength="400"
                android:textColor="@color/white"
                android:textColorHint="@color/common_grey"
                android:textSize="@dimen/text_size_common"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/apply_tv_apply"
        style="@style/bottom_button_style"
        android:text="APPLY"/>
</LinearLayout>