<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_notification_tv_createTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="PM 2:30"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/text_size_small"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_notification_iv_header"
            android:layout_width="160px"
            android:layout_height="160px"
            android:scaleType="centerCrop"
            android:src="@drawable/musicion_default_photo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_notification_iv_header"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_notification_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Gooota"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_common"/>

                <TextView
                    android:id="@+id/item_notification_tv_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/list_star"
                    android:drawablePadding="4dp"
                    android:text="2.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"/>

                <TextView
                    android:id="@+id/item_notification_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONFIRMED"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>

            <TextView
                android:id="@+id/item_notification_tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/invite_you_for_a_show"
                android:textColor="@color/common_grey"
                android:textSize="@dimen/text_size_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_favorite_tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Booking Contact"
                    android:textColor="@color/textAccent"
                    android:textSize="@dimen/text_size_common"/>

                <ImageView
                    android:id="@+id/item_notification_iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/list_phone"/>

                <ImageView
                    android:id="@+id/item_notification_iv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/list_email"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_notification_tv_perform_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_common"
                    tools:text="Oct 2st 1:10PM-3:20PM"/>

                <TextView
                    android:id="@+id/item_notification_tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_double_corner_rect_bg"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="DETAILS"
                    android:textColor="@color/textAccent"
                    android:textSize="@dimen/text_size_small"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/item_notification_ll_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_notification_tv_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:drawableLeft="@drawable/icon_reject"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="REJECT"
                    android:textColor="@color/textAccent"
                    android:textSize="@dimen/text_size_big"/>

                <TextView
                    android:id="@+id/item_notification_tv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_confirm"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="CONFIRM"
                    android:textColor="@color/textAccent"
                    android:textSize="@dimen/text_size_big"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
</LinearLayout>